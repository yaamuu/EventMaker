<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventMaker.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:EventMaker.ViewModel"
    x:Class="EventMaker.View.CreateEventPage"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="../Assets/background1.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="817*"/>
        </Grid.ColumnDefinitions>
        <Grid.DataContext>
            <ViewModel:EventViewModel/>
        </Grid.DataContext>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Id" FontSize="40" />
                    <TextBox Text="{Binding Id, Mode=TwoWay}" Height="40"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name" FontSize="40"/>
                    <TextBox Text="{Binding Name, Mode=TwoWay}" Height="40"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Description" FontSize="40"/>
                    <TextBox Text="{Binding Description, Mode=TwoWay}" Height="40"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Place" FontSize="40"/>

                    <TextBox Text="{Binding Place, Mode=TwoWay}" Height="40"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Date" FontSize="40"/>

                    <DatePicker Date="{Binding Date, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="Time" FontSize="40"/>

                    <TimePicker Time="{Binding Time, Mode=TwoWay}"/>

                </StackPanel>
                <Button Content="Add" Command="{Binding CreateCommand}"/>
                <Button Content="Main Page" Click="ButtonBase_OnClick"/>

            </StackPanel>

        </StackPanel>

    </Grid>
</Page>
